header.header 
    nav.nav.nav--tours 
        a(href='/' class='nav__el') All tours 
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        if user
            a(href='#' class='nav__el nav__el--logut') Log out
            a(href='#' class='nav__el')
                img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}` class='nav__user-img')
                span= user.name.split(' ')[0]
        else 
            a(class='nav__el' href='/login') Log in 
            a(class='nav__el nav__el--cta' href='#') Sign up 